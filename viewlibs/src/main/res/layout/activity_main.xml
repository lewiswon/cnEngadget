<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lewiswon.viewlibs.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >
        <com.lewiswon.viewlibs.view.HorizontalStyleProgressBar
            android:progress="0"
            android:layout_width="match_parent"
            android:padding="5dip"
            android:layout_margin="30dip"
            android:layout_height="wrap_content" />
        <com.lewiswon.viewlibs.view.HorizontalStyleProgressBar
            android:progress="100"
            android:layout_width="match_parent"
            android:padding="5dip"
            android:layout_margin="30dip"
            app:progress_text_color="#00ff00"
            app:progress_unreach_color="#eee"
            android:layout_height="wrap_content" />
        <com.lewiswon.viewlibs.view.HorizontalStyleProgressBar
            android:id="@+id/progress"
            android:progress="0"
            android:layout_width="match_parent"
            android:padding="5dip"
            android:layout_margin="30dip"
            app:progress_text_color="#ff000000"
            app:progress_reach_color="#00eeee"
            app:progress_unreach_color="#00aaff"
            android:layout_height="wrap_content" />
        <com.lewiswon.viewlibs.view.HorizontalStyleProgressBar
            android:progress="100"
            android:layout_width="match_parent"
            android:padding="5dip"
            android:layout_margin="30dip"
            app:progress_text_color="#00ee00"
            app:progress_unreach_color="#ee00fe"
            android:layout_height="wrap_content" />

        <com.lewiswon.viewlibs.view.RoundProgressBar
            android:layout_width="wrap_content"
            android:progress="0"
            android:layout_gravity="center_horizontal"
            android:id="@+id/progressR"
            android:layout_height="wrap_content"
            app:progress_text_color="#ff000000"
            app:progress_reach_color="#00eeee"
            app:progress_unreach_color="#00aaff"
            />
        <com.lewiswon.viewlibs.view.RoundProgressBar
            android:layout_width="wrap_content"
            android:progress="20"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:progress_text_color="#ff000000"
            app:progress_reach_color="#00eeee"
            app:progress_unreach_color="#00aaff"
            />
        <com.lewiswon.viewlibs.view.RoundProgressBar
            android:layout_width="wrap_content"
            android:progress="50"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:progress_text_color="#ff000000"
            app:progress_reach_color="#00eeee"
            app:progress_unreach_color="#00aaff"
            />
        <com.lewiswon.viewlibs.view.RoundProgressBar
            android:layout_width="wrap_content"
            android:progress="100"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:progress_text_color="#ff000000"
            app:progress_reach_color="#00eeee"
            app:progress_unreach_color="#00aaff"
            />
        </LinearLayout>
</ScrollView>
